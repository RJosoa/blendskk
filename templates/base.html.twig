<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Blendsk{% endblock %}</title>
        {% block stylesheets %}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Doto:wght@100..900&family=Noto+Serif:ital,wght@0,100..900;1,100..900&family=Pacifico&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

        {# Comment out Encore tag but keep it for local development #}
        {% if app.environment == 'dev' %}
            {{ encore_entry_link_tags('app') }}
        {% else %}
            <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {% endif %}
        {% endblock %}

        {% block javascripts %}
            {# Comment out Encore tag but keep it for local development #}
            {% if app.environment == 'dev' %}
                {{ encore_entry_script_tags('app') }}
            {% else %}
                <script src="{{ asset('build/app.js') }}"></script>
            {% endif %}
        {% endblock %}
    </head>
    <body class="flex flex-col">
        {% block navbar %}
            {% if app.request.get('_route') not in ['app_login', 'app_register', 'app_posts_new', 'app_posts_edit'] %}
                {% include 'navbar.html.twig' %}
            {% endif %}
        {% endblock %}

        {% block body %}{% endblock %}

        {% block footer %}
            {% if app.request.get('_route') not in ['app_login', 'app_register', 'app_posts_new', 'app_posts_edit'] %}
                {% include 'footer.html.twig' %}
            {% endif %}
        {% endblock %}
    </body>
</html>
