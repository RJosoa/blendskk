{% extends 'base.html.twig' %}

{% block title %}Hello Frontend/ProfileController!{% endblock %}

{% block body %}
<section>
    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>{{ user.avatar }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ user.bio }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_profile_edit', {'id': user.id}) }}">edit</a>

    {{ include('profile/_delete_form.html.twig') }}
</section>
{% endblock %}
